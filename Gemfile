source "https://rubygems.org"

# Instead of depending on jekyll directly, let the github-pages plugin drive the jekyll version
# gem "jekyll", "~> 3.9.3"

# Jekyll theme
gem "jekyll-theme-leap-day", "~> 0.2.0"

# Jekyll plugins all go inside this group
group :jekyll_plugins do
    gem "github-pages", "~> 232"
  gem "jekyll-spaceship", "~> 0.10.2"
end

# Required for Jekyll when Ruby is > 3.0
gem "webrick", "~> 1.9"
